<h1>Listing articles</h1>

<%# Ruby magic new_article_path directs us to /article/new %>
<%= link_to 'New article', new_article_path %>

<table>
    <tr>
        <th>Tittle</th>
        <th>Text</th>
    </tr>

    <%# loops through each article in article object and displays think in a table  %>
    <% @articles.each do |article|%>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.text %></td>
            <%# creates a hyper link to each article %>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Destroy', article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>